<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    >


    <LinearLayout
        android:id="@+id/linearDocumentOpener"
        style="@style/groupStylegray_51"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="vertical">





        <LinearLayout
            android:id="@+id/linearRowarrowleft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22pxh"
            android:layout_marginTop="@dimen/_28pxv"
            android:layout_marginEnd="@dimen/_22pxh"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageArrowleft"
                android:layout_width="@dimen/_12pxh"
                android:layout_height="@dimen/_12pxh"
                android:layout_marginTop="@dimen/_3pxv"
                android:layout_marginBottom="@dimen/_8pxv"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrowleft"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_arrowleft" />

            <TextView
                android:id="@+id/coursetitle"
                style="@style/txtGilroysemibold24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_77pxh"
                android:layout_weight="0.94"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/_1pxh"
                android:singleLine="true"
                android:text="Course Name" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRowrashedothmans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_35pxv"
            android:layout_marginEnd="@dimen/_16pxh"
            android:gravity="start"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearColumnrashedothmans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5pxv"
                android:layout_marginBottom="@dimen/_2pxv"
                android:layout_weight="0.78"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtRashedOthmanS"
                    style="@style/txtGilroysemibold20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="Course Duration" />
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/courseimage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_news2" />

        <TextView
            android:id="@+id/txtDescription"
            style="@style/txtGilroyregular14"
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_29pxv"
            android:layout_marginEnd="@dimen/_16pxh"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/_8pxh"
            android:text="Préparez-vous à une carrière de développeur full stack. Acquérir les compétences recherchées et l'expérience pratique pour être prêt à l'emploi en moins de 4 mois. Aucune expérience préalable n'est requise." />

        <Button
            android:id="@+id/button"
            android:layout_width="401dp"
            android:layout_height="wrap_content"
            android:text="Delete Formation "
            android:layout_marginLeft="5dp"
            />

        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="401dp"
            android:layout_height="wrap_content"
            android:text="Update Formation"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>
</layout>